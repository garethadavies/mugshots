<!-- Login & Register -->

<div class="pure-g-r">

  <div class="pure-u-1-2">

    <section class="item item-left">

      <form id="form-login" class="pure-form pure-form-stacked">

        <div class="extra-padding">

          <fieldset>

            <legend><i class="icon-lock"></i> Log In</legend>

            <p>Log in to edit your organisation's drinks roster<span class="pure-hidden-desktop pure-hidden-tablet"> or <a href="#anchor-register">register</a></span>.</p>

            <label for="form-login-email">Email address</label>
            <input id="form-login-email" class="pure-input-1" type="email" placeholder="Enter your email address">

            <label for="form-login-password">Password</label>
            <input id="form-login-password" class="pure-input-1" type="password" placeholder="Enter your password">
          
          </fieldset>

        </div>

        <div class="form-footer">

          <button type="submit" class="pure-button pure-button-custom full-width">Log In <i class="icon-right-open"></i></button>

        </div>

      </form>

    </section>

  </div>

  <div class="pure-u-1-2">

    <section class="item item-right">

      <form id="form-register" class="pure-form pure-form-stacked">

        <div class="extra-padding">

          <fieldset>
            
            <legend id="anchor-register"><i class="icon-pencil"></i> Register</legend>

            <p>Register your organisation and start your own drinks roster.</p>

            <label for="form-register-organisation">Organisation</label>
            <input id="form-register-organisation" class="pure-input-1" type="email" placeholder="Enter your organisation's name">

            <label for="form-register-email">Email address</label>
            <input id="form-register-email" class="pure-input-1" type="email" placeholder="Enter an email address">

            <label for="form-register-password">Password</label>
            <input id="form-register-password" class="pure-input-1" type="password" placeholder="Enter a password">

            <label for="form-register-confirm">Confirm password</label>
            <input id="form-register-confirm" class="pure-input-1" type="password" placeholder="Confirm your password">
          
          </fieldset>

        </div>

        <div class="form-footer">

          <button type="submit" class="pure-button pure-button-custom full-width">Register <i class="icon-right-open"></i></button>

        </div>

      </form>

    </section>

  </div>

</div>